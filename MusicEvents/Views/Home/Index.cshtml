@model IEnumerable<ShowSongsInIndexModel>
@{
    ViewData["Title"] = "Music Events";
}

<h1 style="text-align:center; margin-bottom: 50px;">Newest Songs</h1>

<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-item active">
     @foreach (var song in Model)
     {
       <div class="carousel-item active data-bs-interval="2000"">
          <iframe width="100%" height="600" src="@song.SongURL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          <div class="carousel-caption d-none d-md-block">
            <h5>@song.SongName</h5>
            <p>@song.ArtistsShow</p>
          </div>
       </div>
     }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


