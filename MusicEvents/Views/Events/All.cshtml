@model IEnumerable<AllEventsFormModel>


@foreach(var ev in Model){


<div class="col-md-2">
	<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src=@ev.ImgURL class="img-fluid rounded-start" alt=@ev.Venue>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@ev.EventName</h5>
        <h6 class="card-title">@ev.Venue</h6>
        <p class="card-text">@ev.Description</p>
        <p class="card-text"><small class="text-muted">@ev.Time.ToString("dd.MM.yyyy hh:mm") - @ev.CityName, @ev.CountryName</small></p>
        <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="btn" style="color:#dd9eff">Check event</a>
        <a class="btn btn-danger">X</a>
      </div>
    </div>
  </div>
</div>
</div>

}